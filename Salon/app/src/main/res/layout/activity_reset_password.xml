<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pwd_reset_latest"
    tools:context=".ResetPasswordActivity">

    <ImageView
        android:id="@+id/img_reset_ella"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ella_latest_circular" />

    <TextView
        android:id="@+id/slogan_reset_beauty_salon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_reset_ella"
        android:layout_marginStart="155dp"
        android:layout_marginTop="-20dp"
        android:text="BEAUTY SALON"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slogan_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_reset_beauty_salon"
        android:layout_marginStart="185dp"
        android:text="We'll Style , You'll Smile!!"
        android:maxLines="1"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="13dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/reset_email"
        android:layout_width="367dp"
        android:layout_height="70dp"
        android:layout_below="@+id/slogan_reset"
        android:layout_marginStart="25dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rectangle"
        android:hint="Enter your registered email Id"
        android:textAlignment="center" />


    <Button
        android:id="@+id/reset_email_btn"
        android:layout_width="367dp"
        android:layout_height="70dp"
        android:layout_below="@+id/reset_email"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:background="@color/pink"
        android:text="@string/reset_password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>