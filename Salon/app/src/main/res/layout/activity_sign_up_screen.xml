<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_account_cover_latest"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_sign_up_ella"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ella_latest_circular" />

    <TextView
        android:id="@+id/beauty_salon_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_sign_up_ella"
        android:layout_marginStart="155dp"
        android:layout_marginTop="-20dp"
        android:text="BEAUTY SALON"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slogan_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beauty_salon_sign_up"
        android:layout_marginStart="185dp"
        android:text="We'll Style , You'll Smile!!"
        android:maxLines="1"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="13dp"
        android:textStyle="italic" />


    <EditText
        android:id="@+id/username_sign_up"
        android:layout_width="367dp"
        android:layout_height="70dp"
        android:layout_below="@+id/beauty_salon_sign_up"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rectangle"
        android:hint="Username"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/email_sign_up"
        android:layout_width="367dp"
        android:layout_height="70dp"
        android:layout_below="@+id/username_sign_up"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rectangle"
        android:hint="Email Address"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/phone_sign_up"
        android:layout_width="367dp"
        android:layout_height="70dp"
        android:singleLine="true"
        android:layout_below="@+id/email_sign_up"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rectangle"
        android:hint="Phone Number"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/password_sign_up"
        android:layout_width="367dp"
        android:layout_height="70dp"
        android:layout_below="@+id/phone_sign_up"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rectangle"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/confirm_password_sign_up"
        android:layout_width="367dp"
        android:layout_height="70dp"
        android:layout_below="@+id/password_sign_up"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:inputType="textPassword"
        android:background="@drawable/rectangle"
        android:hint="Confirm Password"
        android:textAlignment="center" />

    <Button
        android:id="@+id/create_account_sign_up"
        android:layout_width="367dp"
        android:layout_height="70dp"
        android:layout_below="@+id/confirm_password_sign_up"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:background="@color/pink"
        android:text="@string/create_account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>
